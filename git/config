[core]
# Ref: https://askubuntu.com/questions/803486
# Default flags:
#   -F, --quit-if-one-screen
#   -R, --RAW-CONTROL-CHARS
#   -S, --chop-long-lines
#   -X, --no-init
pager = less -RS -+FX

[init]
defaultBranch = main

[commit]
gpgsign = true

[push]
autoSetupRemote = true

[rerere]
enabled = true

[pager]
difftool = true

[alias]
difft = difftool --extcmd=difft --no-prompt
update-submodules = submodule update --rebase --remote
graph = log          \
    --graph          \
    --abbrev-commit  \
    --decorate       \
    --format='format:%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
set-date = "!zsh -ec '                      \
    GIT_COMMITTER_DATE=$1                   \
    git commit --amend --no-edit --date=$1  \
    ' -"
quick-update = "!zsh -ec '  \
    git add -A;             \
    git commit -m $1;       \
    git push origin;        \
    ' -"
quick-update-amend = "!zsh -ec '       \
    git add -A;                        \
    if [[ -z $1 ]] {                   \
        git commit --amend --no-edit;  \
    } else {                           \
        git commit --amend -m $1;      \
    };                                 \
    git push --force origin;           \
    ' -"


# Internal functions
__source() {  # source if exist
    # -f: file exists and readable
    [[ -f $1 ]] && source "$1"
}

# Start p10k instant prompt
__source "$XDG_CACHE_HOME/p10k-instant-prompt-${(%):-%n}.zsh"

